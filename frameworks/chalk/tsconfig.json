{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@slate/slate": [ "../../frameworks/slate/src" ],
            "@slate/marko": [ "../../providers/marko/src" ]
        }
    },
    "include": [ "src/**/*" ],
    "references": [
        { "path": "../../frameworks/slate" },
        { "path": "../../providers/marko" }
    ]
}
