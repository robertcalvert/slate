{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "composite": true
    },
    "include": [ "src/**/*" ],
    "references": [ ]
}
