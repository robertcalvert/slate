{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "composite": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "references": []
}
