{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Demo App",
            "program": "${workspaceFolder}/apps/demo/src/index.ts",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node-dev",
                "--inspect",
                "--respawn",
                "--transpile-only",
                "-r",
                "tsconfig-paths/register",
                "./src/index.ts"
            ],
            "cwd": "${workspaceFolder}/apps/demo",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/apps/demo/src/**/*.ts",
                "${workspaceFolder}/frameworks/slate/src/**/*.ts",
                "${workspaceFolder}/frameworks/chalk/src/**/*.ts",
                "${workspaceFolder}/providers/marko/src/**/*.ts",
                "${workspaceFolder}/providers/typeorm/src/**/*.ts"
            ],
            "skipFiles": [ "<node_internals>/**" ],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Demo App",
            "preLaunchTask": "npm: build",
            "program": "${workspaceFolder}/apps/demo/dist/index.js",
            "runtimeExecutable": "node",
            "cwd": "${workspaceFolder}/apps/demo",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/apps/demo/dist/**/*.js",
                "${workspaceFolder}/frameworks/slate/dist/**/*.js",
                "${workspaceFolder}/frameworks/chalk/dist/**/*.js"
            ],
            "skipFiles": [ "<node_internals>/**" ],
            "console": "integratedTerminal"
        }
    ]
}
