{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@slate/slate": [ "../../frameworks/slate/src" ],
            "@slate/marko": [ "../../plugins/marko/src" ],
            "@slate/typeorm": [ "../../plugins/typeorm/src" ]
        }
    },
    "references": [
        { "path": "../../frameworks/slate" },
        { "path": "../../plugins/marko" },
        { "path": "../../plugins/typeorm" }
    ]
}
